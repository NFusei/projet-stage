{% extends 'layout.twig' %}

{% block body %}
<nav class="navmenu">
  <h2>Pannel Admin</h2>
  <a href="#">
    <i class="fas fa-home"></i>
  </a>
</nav>

<div class="container">
  <div class="container-map">
    <div class="map"></div>
  </div>
  <div id="containerForm" class="container-form">
    <form id="form" data-team-id="">
        <span class="material-icons icon-close">
          close
        </span>
        <div class="container-input">
          <div class="container-form-icons">
            <i class="fas fa-user"></i>
          </div>
          <div class="container-elt">
            <input id="nameInput" name="name" data-type="name" class="form-input" type="text">
            <label class="label-elt" for="nameInput">Nom de l'équipe</label>
          </div>
        </div>
        <div class="container-input">
          <div class="container-form-icons">
            <i class="fas fa-map-marker-alt"></i>
          </div>
          <div class="container-elt">
            <input id="addressInput" name="address" data-type="address" class="form-input" type="text">
            <label class="label-elt" for="addressInput">Adresse de l'équipe</label>
          </div>
        </div>
        <div class="container-input">
          <div class="container-form-icons">
            <i class="fas fa-phone"></i>
          </div>
          <div class="container-elt">
            <input id="phoneInput" name="phone-number" data-type="phone_number" class="form-input" type="text">
            <label class="label-elt" for="phoneInput">Numero de téléphone</label>
          </div>
        </div>
        <div class="container-input">
          <div class="container-form-icons">
            <i class="fas fa-envelope"></i>
          </div>
          <div class="container-elt">
            <input id="emailInput" name="email" data-type="email" class="form-input" type="email">
            <label class="label-elt" for="emailInput">Numero de téléphone</label>
          </div>
        </div>
        <button id="submit-btn" class="btn" type="submit">Mettre à jour</button>
      </form>
  </div>
  <div class="big-container">
    <div class="container-table">
      <table>
        <thead>
          <tr>
            <th>
              <i id="add-team" class="fas fa-plus-square"></i>Nom des équipes
            </th>
          </tr>
        </thead>
        <tbody>
          {% for team in teamsData %}
          <tr>
            <td>
              {{team.name}}
            </td>
            <td>
              <span class="container-icons">
                <span class="material-icons icons-delete">
                  delete
                </span>
                <span data-team-id="{{team.id}}" class="material-icons icons-edit js-edit">
                  edit
                </span>
              </span>
            </td>
          </tr>
          {% endfor %}
          {# <tr>
            <td>
              Equipe 2
            </td>
            <td>
              <span class="container-icons">
                <span class="material-icons icons-delete">
                  delete
                </span>
                <span class="material-icons icons-edit js-edit">
                  edit
                </span>
              </span>
            </td>
          </tr> #}
        </tbody>
      </table>
    </div>
  </div>
{% endblock %}

